#!/usr/bin/env php
<?php

if ($argc < 2) { // Проверяем наличие хотя бы одного аргуента
  
  printf("Отсутствует сумма для расчёта\n");
  
} elseif (!is_numeric($sum = $argv[1])) { // Проверяем, что имеющийся аргумент – это число
  
  printf("Введено не числовое значение\n");
  
} else {
  
  require(__DIR__.'/app/const.php'); // Подключаем файл с массивом купюр
    
    $bills = BILLS;
    arsort($bills); // Сортируем по убыванию массив купюр
    
    foreach ($bills as $bill) { // В порядке от бОльшей к меньшей проходим все купюры
      
      $answer[$bill] = ($sum - ($sum % $bill))/$bill; // Вычисляем, сколько целых купюр в сумме
      $sum %= $bill; // Оставшаяся сумма

    }
    
    if ($sum == 0) { // Если оставшаяся сумма равна нулю – значит успешно разобрали сумму на купюры
      foreach ($answer as $bill => $count) {
        printf("Номиналом %s необходимо купюр %s\n", $bill, $count);
      }
    } else {
      printf("Введена неверная сумма\n");
    }
  
}
